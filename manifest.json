{
  "manifest_version": 2,
  "name": "GMode",
  "version": "1.0",

  "description": "A Galley inside firefox.",

  "icons": {
    "48": "icons/gmode.svg",
    "96": "icons/gmode.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "GMode",
    "default_icon": "icons/gmode.svg"
  },

  "permissions": ["tabs", "activeTab"]
}
